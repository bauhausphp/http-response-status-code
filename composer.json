{
  "name": "bauhaus/http-response-status",
  "description": "HTTP response status",

  "type": "library",
  "license": "MIT",

  "keywords": ["bauhaus", "http", "response", "response status", "status code"],

  "authors": [
    {
      "name": "Felipe Martins",
      "homepage": "https://blog.fefas.net"
    }
  ],

  "support": {
    "issues": "https://github.com/bauhausphp/http-response-status/issues",
    "source": "https://github.com/bauhausphp/http-response-status"
  },

  "scripts": {
    "test:cs": "phpcs -ps --colors",
    "test:unit": "phpunit -c phpunit.xml --testdox --colors=always",
    "tests": [
        "@test:cs",
        "@test:unit"
    ]
  },

  "require": {
    "php": ">=7.1"
  },

  "autoload": {
    "psr-4": {
      "Bauhaus\\Http\\Response\\": "src/"
    }
  },

  "require-dev": {
    "phpunit/phpunit": "^6",
    "squizlabs/php_codesniffer": "^2.8"
  },

  "autoload-dev": {
    "psr-4": {
      "Bauhaus\\Http\\Response\\": [
        "tests/unit/"
      ]
    }
  }
}
